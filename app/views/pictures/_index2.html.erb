<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.title %></td>
    <td><%= picture.content %></td>
    <td><%= link_to "編集", edit_picture_path(picture.id), class: 'btn btn-default btn-sm btn-success' %></td>
    <td><%= link_to "削除", picture_path(picture.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %></td>
    <td><%= image_tag picture.picture, width: 400, hight: 400 %></td>
  </tr>
<% end %>
